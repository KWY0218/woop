<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_rectangle_wall" />

        <ImageView
            android:id="@+id/iv_glass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/iv_human"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/iv_glass"
            app:layout_constraintEnd_toEndOf="@+id/iv_glass"
            app:layout_constraintStart_toStartOf="@+id/iv_glass"
            app:layout_constraintTop_toTopOf="@+id/iv_glass"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_human" />

        <ImageView
            android:id="@+id/iv_exclamationmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/iv_glass"
            app:layout_constraintEnd_toEndOf="@+id/iv_glass"
            app:layout_constraintStart_toStartOf="@+id/iv_glass"
            app:layout_constraintTop_toTopOf="@+id/iv_glass"
            app:srcCompat="@drawable/ic_exclamationmark" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>